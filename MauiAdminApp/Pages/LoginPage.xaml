<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAdminApp.Pages.LoginPage"
             Title="Inicia Sesión">

    <StackLayout Padding="30" Background="{StaticResource BackgroundColor}">
        <Label Text="Iniciar Sesión" FontSize="24" HorizontalOptions="Center" TextColor="{StaticResource TextColor}"/>
        <Entry Placeholder="Usuario" x:Name="UsernameEntry" TextColor="{StaticResource TextColor}"/>
        <Entry Placeholder="Contraseña" IsPassword="True" x:Name="PasswordEntry" TextColor="{StaticResource TextColor}"/>
        <Button Text="Iniciar Sesión" Margin="0, 30, 0, 0" Clicked="OnLoginButtonClicked"/>
        <Button Text="¿Olvidaste tu contraseña?" Margin="0, 30, 0, 0" HorizontalOptions="Center" />
    </StackLayout>
    
</ContentPage>